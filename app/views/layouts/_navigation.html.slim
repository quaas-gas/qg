- if user_signed_in?
  nav.navbar.navbar-inverse.navbar-fixed-top
    .container
      .navbar-header
        button.navbar-toggle[type="button" data-toggle="collapse" data-target=".navbar-collapse"]
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        = link_to 'Quaas-Gas', root_path, class: 'navbar-brand'
      .collapse.navbar-collapse
        ul.nav.navbar-nav
          li class=('active' if params[:controller] == 'customers')
            = link_to Customer.model_name.human(count: 2), customers_url
          li class=('active' if params[:controller] == 'deliveries')
            = link_to Delivery.model_name.human(count: 2), deliveries_url
          li class=('active' if params[:controller] == 'invoices')
            = link_to Invoice.model_name.human(count: 2), invoices_url
          li class=('active' if params[:controller] == 'products')
            = link_to Product.model_name.human(count: 2), products_url
          li class=('active' if params[:controller] == 'sellers')
            = link_to Seller.model_name.human(count: 2), sellers_url


        ul.nav.navbar-nav.navbar-right
          li
            form.navbar-form.navbar-right role="search" action=search_url
              .form-group
                input.form-control type="text" placeholder="Suche" name="q" value=@query autofocus=(params[:controller] == 'search')
          li.dropdown
            a.dropdown-toggle@button href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
              |  #{current_user.username} <span class="caret"></span>
            ul.dropdown-menu
              /li = link_to 'Profil', current_user, title: current_user.name
